{
    "name": "markocupic/export_table",
    "description": "Export Contao database tables to CSV- or XML-files.",
    "keywords": [
        "contao",
        "export",
        "csv",
        "xml"
    ],
    "type": "contao-module",
    "license": "MIT",
    "authors": [
        {
            "name": "Marko Cupic",
            "email": "m.cupic@gmx.ch",
            "homepage": "https://github.com/markocupic",
            "role": "Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/markocupic/export_table/issues",
        "source": "https://github.com/markocupic/export_table"
    },
    "require": {
        "php": "^8.1",
        "ext-xmlwriter": "*",
        "ext-json": "*",
        "contao/core-bundle": "^4.13 || ^5.0",
        "league/csv": "^9.8",
        "ramsey/uuid": "^3.0 || ^4.0"
    },
    "autoload": {
        "psr-4": {
            "Markocupic\\ExportTable\\": "src/"
        }
    },
    "extra": {
        "contao-manager-plugin": "Markocupic\\ExportTable\\ContaoManager\\Plugin"
    },
    "config": {
        "allow-plugins": {
            "contao/manager-plugin": true,
            "contao-components/installer": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "contao-community-alliance/composer-plugin": true
        }
    },
    "scripts": {
        "cs-fixer": "@php tools/ecs/vendor/bin/ecs check config/ contao/ src/ tests/ --config tools/ecs/config.php --fix --ansi",
        "unit-tests": "@php tools/phpunit/vendor/bin/phpunit -c tools/phpunit/phpunit.xml.dist"
    }
}

